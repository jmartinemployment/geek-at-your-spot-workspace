{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "geek-at-your-spot-component-library": {
      "projectType": "library",
      "root": "projects/geek-at-your-spot-component-library",
      "sourceRoot": "projects/geek-at-your-spot-component-library/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/geek-at-your-spot-component-library/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/geek-at-your-spot-component-library/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/geek-at-your-spot-component-library/tsconfig.spec.json"
          }
        }
      }
    },
    "my-elements-app": {
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/my-elements-app/src/main.ts",
            "tsConfig": "projects/my-elements-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "stylePreprocessorOptions": {
              "includePaths": [
                "projects/my-elements-app/src/styles.scss"
              ]
            },
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/my-elements-app/public"
              }
            ],
            "styles": [
              "node_modules/bootstrap/scss/bootstrap.scss",
              "projects/my-elements-app/src/styles.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "700kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/my-elements-app/src/environments/environment.ts",
                  "with": "projects/my-elements-app/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "my-elements-app:build:production"
            },
            "development": {
              "buildTarget": "my-elements-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      },
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/my-elements-app",
      "sourceRoot": "projects/my-elements-app/src",
      "prefix": "app",
    }
  }
}
